{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./js",
      "rootDir": "./ts",
      "lib": ["es6", "dom", "es2017"],
    },
    "include": ["ts/**/*.ts"],
    "exclude": ["node_modules"]
  }